@{
}
@model CreateClubViewModel
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div style="width: 100%">
        <div style="width: 50%; float: left;">
            <div class="form-group">
                <b><label asp-for="Title">Title</label></b>

                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                <span asp-validation-for="Title" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="Description">Description</label></b>

                <input asp-for="Description" class="form-control" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="Image">Image</label></b>

                <input asp-for="Image" class="form-control" type="file">
                <span asp-validation-for="Image" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="ClubCategory">Club Category</label></b>
                <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-select mb-3">
                    <option>--Select--</option>
                </select>
                <span asp-validation-for="ClubCategory" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="Address.Street">Street</label></b>
                <input asp-for="Address.Street" class="form-control" placeholder="Enter Street">
                <span asp-validation-for="Address.Street" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="Address.City">City</label></b>
                <input asp-for="Address.City" class="form-control" placeholder="Enter City">
                <span asp-validation-for="Address.City" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <b><label asp-for="Address.State">State</label></b>
                <input asp-for="Address.State" class="form-control" placeholder="Enter State">
                <span asp-validation-for="Address.State" class="text-danger"></span>
                <br />
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%"><b><i class="bi bi-file-earmark-plus"></i>&nbsp&nbsp Create</b></button>
            <br />
            <br />
            <br />
            <br />
        </div>
        <div style="width: 5%; float: left;">
            <p>&nbsp</p>
        </div>
        
        <div style="width: 45%; float: left;">
            <br />
            <br />
            <img src="https://vectorart.ai/header-r6.svg" style="width: 100%; height: auto" />
        </div>

    </div>
    
</form>

