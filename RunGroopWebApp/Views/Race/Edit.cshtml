@using RunGroopWebApp.Data.Enum
@using RunGroopWebApp.ViewModels
@model EditRaceViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div style="width: 50%">
        <input type="hidden" value="AddressId" id="AddressId" />
        <div class="form-group">
            <b><label asp-for="Title">Title</label></b>

            <input asp-for="Title" class="form-control" placeholder="Enter Title">
            <span asp-validation-for="Title" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <b><label asp-for="Description">Description</label></b>

            <input asp-for="Description" class="form-control" placeholder="Enter Description">
            <span asp-validation-for="Description" class="text-danger"></span>
            <br />
        </div>
        
        <div class="form-group">
            <b><label asp-for="RaceCategory">Club category</label></b>
            <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-select mb-3">
                <option>--Select--</option>
            </select>
            <span asp-validation-for="RaceCategory" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <b><label asp-for="Address.Street">Street</label></b>
            <input asp-for="Address.Street" class="form-control" placeholder="Enter Street">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <b><label asp-for="Address.City">City</label></b>
            <input asp-for="Address.City" class="form-control" placeholder="Enter City">
            <span asp-validation-for="Address.City" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <b><label asp-for="Address.State">State</label></b>
            <input asp-for="Address.State" class="form-control" placeholder="Enter State">
            <span asp-validation-for="Address.State" class="text-danger"></span>
            <br />
        </div>
        <div class="form-group">
            <b><label asp-for="Image">Image</label></b>

            <input asp-for="Image" type="file" class="form-control"  accept="image/*">
            <span asp-validation-for="Image" class="text-danger"></span>
            <br />
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%"><b>Edit</b></button>
    </div>
</form>
